generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt
  email      String       @unique
  type       String
  role       String
  hash       String
  name       String?      @db.VarChar(20)
  gender     String?
  age        Int?
  phone      String?
  accessedAt DateTime?
  isDeleted  Boolean?
  records    BookRecord[]
}

model Book {
  id        String          @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt
  name      String
  author    String
  records   BookRecord[]
}

model BookRecord {
  id         String      @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  userId     String
  bookId     String
  isFavorite Boolean
  isRead     Boolean
  book       Book     @relation(fields: [bookId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

  "scripts": {
    "build": "nest build",
    "build:scheduler": "nest build scheduler",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start swc --type-check",
    "start:gateway": "nest start gateway swc --type-check",
    "start:order": "nest start order swc --type-check",
    "start:payment": "nest start payment swc --type-check",
    "start:scheduler": "nest start scheduler swc --type-check",
    "start:msa-findbook": "nest start msa-findbook swc --type-check",
    "start:socket": "nest start socket swc --type-check",
    "start:socket:dev": "nest start socket swc --watch --type-check",
    "start:dev": "nest start --watch swc --type-check",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/main/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
